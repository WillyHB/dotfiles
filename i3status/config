general {
        output_format = "i3bar"
        colors = true
        interval = 1

}

order += "tztime holder_graphics_mode"
order += "disk /"
order += "memory"
order += "volume master"
order += "battery 0"
order += "tztime local"

battery 0 {
        format = "%status %percentage %emptytime"
        color_bad = "#FF0000"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 20 
        threshold_type = "percentage"
}

memory {
        format = "MEM %used / %total"
}

disk "/" {
        format = "DISK %used / %total"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

volume master {
 format = "AUDIO %volume"   
 format_muted = "AUDIO muted"
}

tztime holder_graphics_mode {
	format = "holder_graphics_mode"

}
